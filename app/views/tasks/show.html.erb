<div id="container" class="container">
  <h1>Tasklist</h1>
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h2><%= @task.title %></h2>
    </div>
    <div class="details col-sm-10 offset-sm-1">
      <p><%= @task.details %></p>
    </div>
    <div class="col-sm-10 offset-sm-1">
      <% if @task.completed == true %>
        <p><input type="checkbox" checked="checked" disabled /> This task is completed. <i class="fa fa-smile-o" aria-hidden="true"></i></p>
      <% else %>
        <p><input type="checkbox" disabled /> This task is not completed. <i class="fa fa-frown-o"></i> </p>
      <% end %>
    </div>
    <div class="col-sm-10 offset-sm-1">
      <%= link_to "Edit", edit_path %> |
      <%= link_to "Delete", task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
    </div>
    <div class="col-sm-10 offset-sm-1">
      <br>
      <br>
      <hr>
      <%= link_to "Back to list", tasks_path %>
    </div>
  </div>
</div>
